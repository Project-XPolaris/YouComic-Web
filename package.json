{
  "name": "youcomic-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "test": "umi test",
    "lint:es": "eslint --ext .js src mock tests",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "precommit": "lint-staged",
    "build:electron:prod": "cross-env NODE_ENV=production webpack --config ./build/webpack.main.prod.config.js",
    "build:electron:dev": "cross-env NODE_ENV=development webpack --config ./build/webpack.main.config.js",
    "start:electron": "cross-env NODE_ENV=development electron-webpack dev",
    "build:win-portable": "electron-builder --win portable",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@date-io/moment": "^1.3.13",
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.39",
    "@material-ui/pickers": "^3.2.9",
    "@types/electron": "^1.6.10",
    "@types/raf": "^3.4.0",
    "@types/randomcolor": "^0.5.3",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-scroll": "^1.5.4",
    "@types/urijs": "^1.19.7",
    "@umijs/fabric": "^2.0.5",
    "@umijs/preset-react": "^1.4.19",
    "awesome-typescript-loader": "^5.2.1",
    "cross-env": "^7.0.2",
    "dva": "^2.6.0-beta.6",
    "dva-logger": "^1.0.0",
    "ismobilejs": "^1.0.3",
    "jwt-simple": "^0.5.6",
    "moment": "^2.24.0",
    "notistack": "^0.9.17",
    "path-to-regexp": "^6.1.0",
    "raf": "^3.4.1",
    "randomcolor": "^0.5.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hook-form": "^6.0.8",
    "react-infinite-scroller": "^1.2.4",
    "react-scroll": "^1.7.16",
    "umi": "^3.1.2",
    "umi-request": "^1.2.17",
    "urijs": "^1.19.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "babel-eslint": "^9.0.0",
    "electron": "^9.1.0",
    "electron-builder": "^22.4.1",
    "electron-debug": "^3.0.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "react-test-renderer": "^16.7.0",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "electron"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "main": "./dist/main/main.js",
  "build": {
    "appId": "com.projectxpolaris.youcomicweb",
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
